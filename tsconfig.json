{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",             // Cambiar a "es2022" o "esnext"
    "module": "ES2022",             // Cambiar a "ES2022" o "ESNext"
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules"]
}
